# Application
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=Prediction Market Aggregator

# Prediction Market API Keys
POLYMARKET_API_KEY=           # Optional for basic access
KALSHI_API_KEY=               # Required for Kalshi
KALSHI_API_SECRET=            # Required for Kalshi
FRED_API_KEY=                 # Free from fred.stlouisfed.org
REDDIT_CLIENT_ID=             # Optional - for sentiment
REDDIT_CLIENT_SECRET=         # Optional - for sentiment

# Rate Limiting Configuration (requests per second)
RATE_LIMIT_POLYMARKET=10
RATE_LIMIT_KALSHI=5
RATE_LIMIT_PREDICTIT=2
RATE_LIMIT_METACULUS=10
RATE_LIMIT_MANIFOLD=20

# Caching Configuration (seconds)
CACHE_TTL_RECENT_EVENTS=300   # 5 minutes
CACHE_TTL_DISTANT_EVENTS=900  # 15 minutes
REDIS_URL=                    # Optional: redis://localhost:6379

# Feature Flags
ENABLE_HISTORICAL_DATA=true
ENABLE_AUTO_REFRESH=true
ENABLE_REDDIT_SENTIMENT=false

# Categories to Track
TRACK_FED_POLICY=true
TRACK_ELECTIONS=true
TRACK_ECONOMIC_DATA=true
TRACK_GOVERNMENT=true

# Snapshot Scheduler Configuration
SNAPSHOT_SCHEDULE="0 0 * * *"     # Cron expression: Daily at midnight
SNAPSHOT_TIMEZONE=UTC             # Timezone for scheduling
SNAPSHOT_RUN_ON_STARTUP=false     # Run snapshot immediately on app start
SNAPSHOT_RETENTION_DAYS=365       # Keep snapshots for 1 year

# Auto-Resolution Configuration
ENABLE_AUTO_RESOLUTION=true       # Enable automatic event resolution
RESOLUTION_SCHEDULE="30 0 * * *"  # Daily at 12:30 AM (after snapshots)
RESOLUTION_TIMEZONE=UTC           # Timezone for resolution scheduler
RESOLUTION_DAYS_AFTER_CLOSE=1     # Min days after close before auto-resolving
RESOLUTION_DRY_RUN=false          # If true, only logs without resolving

# Logging
LOG_LEVEL=info                # debug, info, warn, error
